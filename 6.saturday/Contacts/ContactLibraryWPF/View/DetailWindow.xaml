        <Button Content="Save" Margin="280,174,0,0" Click="SaveClick" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="120,174,0,0" Width="144" Click="CancelClick" Height="36" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="115,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.527,2.993" Height="26" Width="62"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="115,83,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="120,114,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
