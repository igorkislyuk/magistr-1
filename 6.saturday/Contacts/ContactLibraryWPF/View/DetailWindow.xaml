<Window x:Class="ContactLibraryWPF.View.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactLibraryWPF.View"
        mc:Ignorable="d"
        Title="Contact Detail" Height="258.974" Width="457.265" ResizeMode="NoResize">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="182,52,0,0" TextWrapping="Wrap" Text="{Binding Path=Name, Mode=TwoWay}" VerticalAlignment="Top" Width="156"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="182,83,0,0" TextWrapping="Wrap" Text="{Binding Path=Phone, Mode=TwoWay}" VerticalAlignment="Top" Width="156"/>
