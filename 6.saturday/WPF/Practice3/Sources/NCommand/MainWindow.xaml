<Window x:Class="NCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" >
    <Grid>
        <Menu HorizontalAlignment="Left" Height="40" VerticalAlignment="Bottom" Width="520">
            <MenuItem Header="Menu Items"/>
            <MenuItem Header="Launch" Command="local:CustomCommands.Launch"/>
        </Menu>
        <Button Content="Launch" HorizontalAlignment="Left" Margin="234,10,0,0" VerticalAlignment="Top" Width="75" Command="local:CustomCommands.Launch"/>
        <CheckBox x:Name="checkBox1" Content="Enable Launch Command" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
