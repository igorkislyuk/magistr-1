<Window x:Class="UserForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserForms"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <WindowsFormsHost x:Name="WindowsFormsHost1" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="99"
                          xmlns:my="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
                          xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms">
            <wf:MaskedTextBox Name="MaskedTextBox1" Mask="(000)-000-0000"/>
        </WindowsFormsHost>

        <Button Height="23" Margin="21,76,125,0" Name="Button1" VerticalAlignment="Top" Click="Button1_Click">
            Add to collection
        </Button>
        <Button Margin="21,0,125,118" Name="Button2" Height="22" VerticalAlignment="Bottom" Click="Button2_Click">
            Save collection to file
        </Button>
    </Grid>
</Window>
