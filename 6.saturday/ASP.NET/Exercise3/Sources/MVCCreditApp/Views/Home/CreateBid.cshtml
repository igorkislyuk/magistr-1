@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>CreateBid</title>
</head>
<body>
<div>
    <h3>Существующие заявки</h3>
    <table>
        <tr>
            <td>
                <p>Имя</p>
            </td><td>
                <p>Тип кредита </p>
            </td>
        </tr>
        @foreach (var c in ViewBag.Bids)
        {
            <tr>
                <td>
                    <p>@c.Name</p>
                </td><td>
                    <p>@c.CreditHead</p>
                </td>
            </tr>
        }
    </table>

    <h3>Форма подачи заявки по программам кредитования</h3>
    <form method="post" action="">
        <table>
            <tr>
                <td>
                    <p>Введите свое имя </p>
                </td><td>
                    <input type="text" name="Name"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Выберите из списка тип кредита :</p>
                </td>
                <td>
                    <select name="CreditHead">
                        <option>Ипотечный кредит</option>
                        <option>Образовательный кредит</option>
                        <option>Потребительский кредит</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Отправить"/>
                </td><td></td>
            </tr>
        </table>
    </form>
</div>
</body>
</html>